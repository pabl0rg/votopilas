<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:weightSum="1">

    <ImageView
        android:id="@+id/rating_photo1"
        android:layout_width="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_action_account_circle"/>

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIP"
            android:textColor="@color/accent"
            android:textSize="12sp" />


        <RatingBar
            android:id="@+id/rating_politician"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rating_star_list_politician_height"
            android:numStars="5"
            android:isIndicator="true"
            android:layout_marginTop="@dimen/margin_top_politician_row_item_separator"
            android:progressDrawable="@drawable/rating_bar_layerlist"/>


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jarlsberg lancashire edam. Dolcelatte hard cheese brie st. agur blue
    cheese caerphilly bavarian bergkase cheese and biscuits mascarpone."
            android:layout_marginTop="0dp" />
    </LinearLayout>
</LinearLayout>

