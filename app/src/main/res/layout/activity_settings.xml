<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crealoya.votopilas.ui.activity.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="?attr/actionBarSize">


        <RelativeLayout
            android:id="@+id/choose_valuation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:rotation="-90"
                android:src="@drawable/ic_arrow_down"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:text="@string/choose_valuation"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/expandable_header_section_arrow2"
                android:textSize="@dimen/text_size_big"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:rotation="-90"
                android:src="@drawable/ic_arrow_down"/>

            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/expandable_header_section_arrow2"
                android:textSize="@dimen/text_size_big"/>

        </RelativeLayout>

        <Button
            android:id="@+id/restore_parties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_settings"
            android:text="@string/restore_parties"/>

    </LinearLayout>

    <include layout="@layout/inc_toolbar" />

</RelativeLayout>
